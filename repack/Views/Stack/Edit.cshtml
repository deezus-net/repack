@model repack.ViewModels.StackViewModel
<div class="row mt-5">
    <div class="col-6">
        <a href="~/stack/" class="btn btn-secondary">Back</a>
    </div>
</div>
<form class="mt-3" action="~/stack/edit/@(Model.Stack.Id > 0 ? Model.Stack.Id.ToString() : "")" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Stack Name" asp-for="Stack.Name">
    </div>
    @if (Model.Stack.Id > 0)
    {
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="delete" asp-for="Delete">
            <label class="form-check-label" for="delete">Delete</label>
        </div>
    }
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        
    </div>
</form>