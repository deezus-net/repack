@model repack.ViewModels.LoginViewModel
<div class="login d-flex flex-column justify-content-center">
    <form action="~/" method="post">
        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" class="form-control" id="id" placeholder="ID" asp-for="Id">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" asp-for="Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>