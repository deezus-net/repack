@model repack.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="login d-flex flex-column justify-content-center">
    <form action="~/" method="post">
        <div class="form-group">
            <label for="id">@Localizer["LabelId"]</label>
            <input type="text" class="form-control@(ViewData.ModelState["Id"]?.Errors.Count > 0 ? " is-invalid" : "")" id="id" placeholder="ID" asp-for="Id" />
            @if (ViewData.ModelState["Id"]?.Errors.Count > 0)
            {
                <div class="invalid-feedback">
                    @Localizer[ViewData.ModelState["Id"].Errors[0].ErrorMessage]
                </div>
            }
        </div>
        <div class="form-group">
            <label for="password">@Localizer["LabelPassword"]</label>
            <input type="password" class="form-control@(ViewData.ModelState["Password"]?.Errors.Count > 0 ? " is-invalid" : "")" id="password" placeholder="Password" asp-for="Password">
            @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
            {
                <div class="invalid-feedback">
                    @Localizer[ViewData.ModelState["Password"].Errors[0].ErrorMessage]
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary">@Localizer["LabelLogin"]</button>
    </form>
</div>