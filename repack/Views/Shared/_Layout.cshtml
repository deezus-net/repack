@using Microsoft.AspNetCore.Mvc.Localization
@using repack.Classes
@model repack.ViewModels.BaseViewModel
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <base href="~/"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="shortcut icon" href="~/favicon.ico">
    <link rel="icon" sizes="any" href="~/favicon.svg" type="image/svg+xml" />
    <link rel="mask-icon" href="~/favicon.svg" color="black" />
    <title>Re-Pack</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
<nav class="navbar navbar-dark bg-dark fixed-top navbar-expand">
    <a class="navbar-brand" href="~/">Re-Pack</a>
    <div class="collapse navbar-collapse">
        @if (Context.User.Identity.IsAuthenticated)
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="~/stack" class="nav-link@(Model.GlobalMenu == "stack" ? " active" : "")">@Localizer["MenuStacks"]</a>
                </li>
                @if (Context.User.IsInRole(Define.AccountType.Administrator))
                {
                    <li class="nav-item">
                        <a href="~/user" class="nav-link@(Model.GlobalMenu == "user" ? " active" : "")">@Localizer["MenuUsers"]</a>
                    </li>
                }
                <li class="nav-item">
                    <a href="~/help" class="nav-link@(Model.GlobalMenu == "help" ? " active" : "")">@Localizer["MenuHelp"]</a>
                </li>
            </ul>
            
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="~/logout" class="nav-link">@Localizer["MenuLogout"]</a>
                </li>
            </ul>
        }
    </div>

</nav>
<div class="container">
    @RenderBody()
</div>

</body>
</html>
